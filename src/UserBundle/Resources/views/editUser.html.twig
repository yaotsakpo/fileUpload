{% extends 'base.html.twig' %}

{% block stylesheets %}

{{ parent() }}

{% endblock %}

{% block body %}
   <a class="btn btn-primary" href="{{ path('homepage')}}" style="margin:1%">retour</a>
   <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <div class="card-title">Modification d'un utilisateur</div>
                </div>
                <div class="card-body">
                  {{ form_start(edit_form,{'attr': {'v':'v' ,'class':'form-horizontal style-form' }}) }}
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label>username:</label>
                        {{ form_errors(edit_form.username) }}
                       {{ form_widget(edit_form.username,{'attr':{'placeholder':'Username','autocomplete': 'off','class':'form-control'}}) }}
                      </div>
                    </div>
                     <div class="col-lg-4">
                      <div class="form-group">
                        <label >Email:</label>
                         {{ form_errors(edit_form.email) }}
                        {{ form_widget(edit_form.email,{'attr': {'autocomplete': 'off', 'placeholder':'Email','class':'form-control' }}) }}
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label>Roles:</label>
                        {{ form_errors(edit_form.roles) }}
                        {{ form_widget(edit_form.roles,{'attr':{'class':'form-control'}} ) }}
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <center>
                    <button type="submit" class="btn btn-primary">valider</button>
                    <button type="reset" class="btn btn-danger">annuler</button> 
                    </center>
                  </div>
                  {{ form_end(edit_form) }}

                </div>     
            </div>
      </div>
</div>



{% endblock %}


{% block javascripts %}

{{ parent() }}

<script type="text/javascript">

$('#basic-datatables').DataTable({
    });


{% for error in edit_form.vars.errors.form.getErrors(true) %} 

      var placementFrom = 'top';
      var placementAlign = 'right';
      var state = 'danger';
      var style = 'withicon';
      var content = {};

      content.message = '{{ error.message }}';
      content.title = 'notification';
      if (style == "withicon") {
          content.icon = 'fa fa-bell';
      } else {
          content.icon = 'none';
      }
      content.url = '#';
      

      $.notify(content,{
          type: state,
          placement: {
              from: placementFrom,
              align: placementAlign
          },
          time: 1000,
          delay: 0,
      });
{% endfor %}

</script>


{% endblock %}